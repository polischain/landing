{
  "name": "@polischain/landing",
  "license": "MIT",
  "scripts": {
    "gen": "pwa-asset-generator ./public/logo.svg --opaque false --manifest ./public/manifest.json --index ./public/index.html -f -w -p --type png public/",
    "build:tailwind": "tailwind build -i styles/index.css -o styles/tailwind.css",
    "dev": "next dev",
    "start": "next start",
    "build": "next build",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "5.15.3",
    "express": "4.17.1",
    "next": "latest",
    "next-pwa": "latest",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "styled-components": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "16.4.3",
    "@types/react": "17.0.15",
    "@typescript-eslint/eslint-plugin": "4.28.5",
    "@typescript-eslint/parser": "4.28.5",
    "autoprefixer": "10.3.1",
    "eslint": "7.31.0",
    "eslint-config-next": "11.0.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-react": "7.24.0",
    "husky": "7.0.1",
    "identity-obj-proxy": "3.0.0",
    "lint-staged": "11.1.1",
    "postcss": "^8.3.6",
    "prettier": "2.3.2",
    "pwa-asset-generator": "4.3.3",
    "tailwindcss": "2.2.7",
    "typescript": "4.3.5"
  }
}
